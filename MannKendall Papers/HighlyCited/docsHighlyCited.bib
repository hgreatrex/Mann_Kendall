@article{ WOS:000461855600034,
Author = {Yao, Rui and Wang, Lunche and Huang, Xin and Gong, Wei and Xia, Xiangao},
Title = {Greening in Rural Areas Increases the Surface Urban Heat Island
   Intensity},
Journal = {GEOPHYSICAL RESEARCH LETTERS},
