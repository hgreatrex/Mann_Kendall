@article{ WOS:000519564600014,
Author = {Meng, Xiaoyu and Gao, Xin and Li, Shengyu and Lei, Jiaqiang},
Title = {Spatial and Temporal Characteristics of Vegetation NDVI Changes and the
   Driving Forces in Mongolia during 1982-2015},
Journal = {REMOTE SENSING},
