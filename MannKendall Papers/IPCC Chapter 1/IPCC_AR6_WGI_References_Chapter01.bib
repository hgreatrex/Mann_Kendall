doi = {10.1016/j.earscirev.2020.103286},
issn = {0012-8252},
journal = {Earth-Science Reviews},
keywords = {AMO,Climate changes,ENSO,Holocene,IOD,Modes of variability,NAO,PDO,Palaeoclimatology,Proxy-based reconstructions,SAM},
