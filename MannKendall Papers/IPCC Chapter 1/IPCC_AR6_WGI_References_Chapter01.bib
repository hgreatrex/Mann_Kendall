journal = {Hydrology and Earth System Sciences},
month = {may},
number = {5},
pages = {1765--1781},
title = {{Elusive drought: uncertainty in observed trends and short- and long-term CMIP5 projections}},
url = {https://www.hydrol-earth-syst-sci.net/17/1765/2013/},
