publisher = {American Meteorological Society},
title = {{Predecessor rain events ahead of tropical cyclones}},
url = {https://doi.org/10.1175/2010MWR3243.1 http://journals.ametsoc.org/doi/abs/10.1175/2010MWR3243.1},
