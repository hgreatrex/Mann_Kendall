pages = {3931--3936},
pmid = {25733875},
title = {{Anthropogenic warming has increased drought risk in California}},
url = {http://www.pnas.org/content/112/13/3931.abstract http://www.pnas.org/lookup/doi/10.1073/pnas.1422385112},
volume = {112},
