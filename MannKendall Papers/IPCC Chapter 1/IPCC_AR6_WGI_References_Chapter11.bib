isbn = {2169897X},
issn = {2169897X},
journal = {Journal of Geophysical Research: Atmospheres},
keywords = {10.1002/2014JD021478 and convection-resolving mode,Clausius-Clapeyron,hourly precipitation,model evaluation},
month = {jul},
