doi = {10.1002/qj.199},
issn = {0035-9009},
journal = {Quarterly Journal of the Royal Meteorological Society},
keywords = {heavy precipitation,low-level cold pool,mesoscale convective systems,quasi-stationary behaviour},
month = {jan},
number = {630},
pages = {131--145},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{A numerical study of three catastrophic precipitating events over southern France. II: Mesoscale triggering and stationarity factors}},
