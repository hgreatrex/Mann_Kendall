pages = {381--392},
title = {{High-resolution spatio-temporal analyses of drought episodes in the western Mediterranean basin (Spanish mainland, Iberian Peninsula)}},
url = {http://link.springer.com/10.1007/s11600-018-0138-x},
volume = {66},
