issn = {00221694},
journal = {Journal of Hydrology},
month = {mar},
pages = {124533},
title = {{Multiscale hydrological drought analysis: Role of climate, catchment and morphological variables and associated thresholds}},
url = {https://linkinghub.elsevier.com/retrieve/pii/S0022169419312685},
volume = {582},
year = {2020}
}
