pages = {114004},
publisher = {IOP Publishing},
title = {{Attributing human influence on the July 2017 Chinese heatwave: the influence of sea-surface temperatures}},
url = {http://stacks.iop.org/1748-9326/13/i=11/a=114004?key=crossref.398561784b62a2eb4d07f96e745d5b3e http://dx.doi.org/10.1088/1748-9326/aae356 https://iopscience.iop.org/article/10.1088/1748-9326/aae356},
