journal = {Journal of Climate},
keywords = {Atmospheric circulation,Circulation/dynamics,Large-scale motions,Synoptic climatology},
number = {19},
pages = {6909--6921},
title = {{Evolution of the circulation anomalies and the quasi-biweekly oscillations associated with extreme heat events in Southern China}},
volume = {29},
year = {2016}
}
