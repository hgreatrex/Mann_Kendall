pages = {034036},
title = {{Human water consumption intensifies hydrological drought worldwide}},
url = {http://stacks.iop.org/1748-9326/8/i=3/a=034036?key=crossref.86c43c7a6d3dcb1ddc90b7d39b2f09ef},
volume = {8},
