doi = {10.1007/s00382-015-2500-x},
issn = {1432-0894},
journal = {Climate Dynamics},
number = {9},
pages = {2667--2681},
title = {{The influence of the Interdecadal Pacific Oscillation on Temperature and Precipitation over the Globe}},
