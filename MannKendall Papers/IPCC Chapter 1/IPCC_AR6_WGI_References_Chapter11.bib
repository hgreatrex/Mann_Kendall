doi = {10.1007/s00382-015-2725-8},
issn = {14320894},
journal = {Climate Dynamics},
keywords = {Climate change,Detection,Extreme events,Internal variability,Temperature record-breaking statistics},
number = {9-10},
pages = {2717--2735},
publisher = {Springer Berlin Heidelberg},
title = {{Detection of anthropogenic influence on the evolution of record-breaking temperatures over Europe}},
volume = {46},
year = {2016}
}
