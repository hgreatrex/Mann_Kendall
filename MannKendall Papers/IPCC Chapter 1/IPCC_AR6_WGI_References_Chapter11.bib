doi = {10.1002/joc.4720},
issn = {10970088},
journal = {International Journal of Climatology},
keywords = {long-term trends,mean wind speed,measurement time intervals,stilling},
number = {1},
pages = {480--492},
title = {{Assessing the impact of measurement time interval when calculating wind speed means and trends under the stilling phenomenon}},
