journal = {International Journal of Climatology},
keywords = {Alps,climate change,convective fraction,convective precipitation,dry spells,large-scale precipitation,precipitation change,regional climate models,wet spells},
month = {sep},
number = {11},
pages = {3204--3219},
publisher = {Wiley-Blackwell},
title = {{Projected changes in precipitation intensity and frequency in Switzerland: a multi-model perspective}},
url = {https://doi.org/10.1002/joc.4162 http://doi.wiley.com/10.1002/joc.4162},
