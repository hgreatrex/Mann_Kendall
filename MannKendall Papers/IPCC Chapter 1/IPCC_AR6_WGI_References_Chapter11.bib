keywords = {article is available online,climate change,detection and attribution,external forcing,fraction of attributable risk,impacts,summer temperatures,supplementary material for this},
month = {apr},
number = {4},
pages = {1--15},
publisher = {IOP Publishing},
title = {{Historically hottest summers projected to be the norm for more than half of the world's population within 20 years}},
