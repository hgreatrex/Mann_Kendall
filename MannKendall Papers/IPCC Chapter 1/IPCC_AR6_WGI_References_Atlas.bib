month = {jun},
number = {7},
pages = {3147--3159},
publisher = {John Wiley and Sons Ltd},
title = {{Snow cover trends in Finland over 1961–2014 based on gridded snow depth observations}},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/joc.6007},
volume = {39},
year = {2019}
}
@article{Lussana2018,
