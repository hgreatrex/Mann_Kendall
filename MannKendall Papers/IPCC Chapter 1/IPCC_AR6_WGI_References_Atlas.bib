issn = {2169-897X},
journal = {Journal of Geophysical Research: Atmospheres},
keywords = {Spitsbergen,atmospheric circulation,polar amplification,sea ice,surface air temperature},
month = {oct},
number = {20},
pages = {11913--11931},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Recent warming on Spitsbergen – Influence of atmospheric circulation and sea ice cover}},
url = {https://doi.org/10.1002/2016JD025606},
volume = {121},
year = {2016}
}
