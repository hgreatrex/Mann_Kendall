pages = {101--119},
publisher = {Taylor {\&} Francis},
title = {{Influence of the Model Horizontal Resolution on Atmospheric Conditions Leading to Freezing Rain in Regional Climate Simulations}},
url = {https://www.tandfonline.com/doi/full/10.1080/07055900.2019.1583088},
volume = {57},
