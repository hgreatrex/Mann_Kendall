journal = {Journal of Climate},
number = {23},
pages = {8212--8237},
title = {{Can a Regional Climate Model Improve the Ability to Forecast the North American Monsoon?}},
url = {https://doi.org/10.1175/JCLI-D-11-00441.1},
volume = {25},
year = {2012}
}
