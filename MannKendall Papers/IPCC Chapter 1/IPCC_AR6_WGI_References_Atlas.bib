issn = {0899-8418},
journal = {International Journal of Climatology},
keywords = {Central Asia,ENSO,annual precipitation,long-term variation,multiperiods},
month = {aug},
number = {S1},
pages = {157--170},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Variations and changes of annual precipitation in Central Asia over the last century}},
