pages = {140},
school = {National Institute for Space Research (INPE)},
title = {{An{\'{a}}lise estat{\'{i}}stica da sazonalidade e tend{\^{e}}ncias das esta{\c{c}}{\~{o}}es chuvosas e seca na Amaz{\^{o}}nia: Clima presente e proje{\c{c}}{\~{o}}es futuras}},
