doi = {10.1029/2006JD008124},
issn = {0148-0227},
journal = {Journal of Geophysical Research: Atmospheres},
keywords = {doi:10.102,http://dx.doi.org/10.1029/2006JD008124},
month = {oct},
number = {D22},
pages = {D22S21},
title = {{Atmospheric brown clouds: Hemispherical and regional variations in long-range transport, absorption, and radiative forcing}},
