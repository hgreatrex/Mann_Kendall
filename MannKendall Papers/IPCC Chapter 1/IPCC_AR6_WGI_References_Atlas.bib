author = {Luo, Min and Liu, Tie and Frankl, Amaury and Duan, Yongchao and Meng, Fanhao and Bao, Anming and Kurban, Alishir and {De Maeyer}, Philippe},
doi = {10.1002/joc.5425},
issn = {0899-8418},
journal = {International Journal of Climatology},
keywords = {Xinjiang Uygur Autonomous Region,climate change,downscaling methods,general circulation models,interpolation},
month = {apr},
number = {5},
pages = {2538--2553},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Defining spatiotemporal characteristics of climate change trends from downscaled GCMs ensembles: how climate change reacts in Xinjiang, China}},
url = {https://doi.org/10.1002/joc.5425},
volume = {38},
year = {2018}
