journal = {Journal of Geophysical Research: Atmospheres},
keywords = {Hawaii,climate change,rainfall,statistical downscaling},
number = {1},
pages = {92--112},
title = {{Statistical downscaling of rainfall changes in Hawai‘i based on the CMIP5 global model projections}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2014JD022059},
volume = {120},
