issn = {08998418},
journal = {International Journal of Climatology},
month = {jul},
number = {9},
pages = {2210--2222},
title = {{Towards identifying areas at climatological risk of desertification using the K{\"{o}}ppen-Geiger classification and FAO aridity index}},
