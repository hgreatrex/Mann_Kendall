title = {{Crossbreeding CMIP6 Earth System Models With an Emulator for Regionally Optimized Land Temperature Projections}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2019GL086812},
volume = {47},
