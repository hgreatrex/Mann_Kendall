title = {{Late Pliocene Cordilleran Ice Sheet development with warm Northeast Pacific sea surface temperatures}},
url = {https://www.clim-past-discuss.net/cp-2019-29/},
volume = {16},
year = {2020}
}
@article{Sanchez-Velasco2019,
