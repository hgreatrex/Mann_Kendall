month = {jun},
number = {6},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{The 8.2 ka event: Abrupt transition of the subpolar gyre toward a modern North Atlantic circulation}},
url = {https://doi.org/10.1029/2009GC003024},
volume = {11},
year = {2010}
}
@article{Borstad2011,
