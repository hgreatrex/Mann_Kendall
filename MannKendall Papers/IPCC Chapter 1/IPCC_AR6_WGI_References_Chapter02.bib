journal = {Applied Optics},
keywords = {Fundamental processes,Light fields,Ocean color},
month = {apr},
number = {10},
pages = {C100--C114},
publisher = {OSA},
title = {{Reconciling models of primary production and photoacclimation}},
url = {http://ao.osa.org/abstract.cfm?URI=ao-59-10-C100},
volume = {59},
