doi = {10.1007/s00704-018-2623-1},
issn = {1434-4483},
journal = {Theoretical and Applied Climatology},
month = {sep},
number = {1-2},
pages = {587--600},
title = {{Observed differences between near-surface air and skin temperatures using satellite and ground-based data}},
