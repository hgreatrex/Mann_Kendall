doi = {10.1038/s41586-018-0106-2},
isbn = {4158601801062},
issn = {1476-4687},
journal = {Nature},
number = {7705},
pages = {413--417},
title = {{An unexpected and persistent increase in global emissions of ozone-depleting CFC-11}},
