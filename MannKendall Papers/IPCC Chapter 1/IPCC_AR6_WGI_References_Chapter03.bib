pages = {909--925},
pmid = {249403100003},
publisher = {Springer-Verlag},
title = {{Impact of resolving the diurnal cycle in an ocean–atmosphere GCM. Part 2: A diurnally coupled CGCM}},
url = {http://link.springer.com/10.1007/s00382-008-0429-z},
volume = {31},
year = {2008}
}
@article{Bernie2007,
