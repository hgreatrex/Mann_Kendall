issn = {1758-678X},
journal = {Nature Climate Change},
month = {oct},
number = {10},
pages = {888--892},
title = {{Recent Walker circulation strengthening and Pacific cooling amplified by Atlantic warming}},
url = {http://www.nature.com/articles/nclimate2330},
volume = {4},
year = {2014}
}
