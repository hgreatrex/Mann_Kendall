issn = {17586798},
journal = {Nature Climate Change},
month = {nov},
number = {12},
pages = {1076--1081},
publisher = {Springer Nature},
title = {{Polar amplification dominated by local forcing and feedbacks}},
url = {https://doi.org/10.1038{\%}2Fs41558-018-0339-y},
volume = {8},
year = {2018}
}
