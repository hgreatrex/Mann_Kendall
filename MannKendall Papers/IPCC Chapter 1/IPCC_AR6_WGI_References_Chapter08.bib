title = {{Changes in Hurricanes from a 13-Yr Convection-Permitting Pseudo–Global Warming Simulation}},
url = {https://doi.org/10.1175/JCLI-D-17-0391.1 http://journals.ametsoc.org/doi/10.1175/JCLI-D-17-0391.1},
volume = {31},
year = {2018}
