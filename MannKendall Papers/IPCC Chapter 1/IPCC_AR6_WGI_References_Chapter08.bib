title = {{ENSO teleconnections with Australian rainfall in coupled model simulations of the last millennium}},
url = {https://doi.org/10.1007/s00382-015-2824-6 http://link.springer.com/10.1007/s00382-015-2824-6},
volume = {47},
year = {2016}
}
@article{br10,
