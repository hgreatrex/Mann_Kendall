pages = {1702},
title = {{Synthetic Impacts of Internal Climate Variability and Anthropogenic Change on Future Meteorological Droughts over China}},
url = {http://www.mdpi.com/2073-4441/10/11/1702},
volume = {10},
year = {2018}
}
