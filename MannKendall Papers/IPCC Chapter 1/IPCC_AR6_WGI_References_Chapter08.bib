title = {{Land–Atmosphere Interactions: The LoCo Perspective}},
url = {https://doi.org/10.1175/BAMS-D-17-0001.1 https://journals.ametsoc.org/view/journals/bams/99/6/bams-d-17-0001.1.xml},
volume = {99},
