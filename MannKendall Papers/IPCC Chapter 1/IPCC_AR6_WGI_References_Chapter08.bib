doi = {10.1007/s00382-016-3052-4},
issn = {0930-7575},
journal = {Climate Dynamics},
month = {dec},
number = {12},
pages = {3931--3954},
title = {{Projected changes of summer monsoon extremes and hydroclimatic regimes over West Africa for the twenty-first century}},
