issn = {1680-7324},
journal = {Atmospheric Chemistry and Physics},
month = {dec},
number = {24},
pages = {12433--12450},
title = {{Anthropogenic agent implicated as a prime driver of shift in precipitation in eastern China in the late 1970s}},
