doi = {10.1038/s41561-019-0432-5},
issn = {1752-0908},
journal = {Nature Geoscience},
number = {10},
pages = {802--808},
title = {{Two decades of glacier mass loss along the Andes}},
url = {https://doi.org/10.1038/s41561-019-0432-5},
volume = {12},
year = {2019}
}
