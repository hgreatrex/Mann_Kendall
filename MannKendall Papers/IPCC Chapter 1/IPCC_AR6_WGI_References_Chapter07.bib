issn = {1432-0894},
journal = {Climate Dynamics},
number = {3},
pages = {913--924},
title = {{A new way of quantifying GCM water vapour feedback}},
url = {https://doi.org/10.1007/s00382-012-1294-3},
volume = {40},
year = {2013}
