journal = {Geophysical Research Letters},
keywords = {carbon dioxide,line shape function,radiative forcing,spectroscopy},
month = {may},
number = {10},
pages = {5318--5325},
title = {{The spectroscopic foundation of radiative forcing of climate by carbon dioxide}},
