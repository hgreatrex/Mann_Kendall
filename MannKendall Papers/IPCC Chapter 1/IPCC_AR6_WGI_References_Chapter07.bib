journal = {Geophysical Research Letters},
month = {may},
number = {9},
pages = {4281--4289},
publisher = {AMER GEOPHYSICAL UNION},
title = {{A Revisit of Global Dimming and Brightening Based on the Sunshine Duration}},
type = {Article},
