journal = {Journal of Climate},
number = {18},
pages = {7379--7398},
title = {{Evaluation of Eight Current Reanalyses in Simulating Land Surface Temperature from 1979 to 2003 in China}},
url = {https://doi.org/10.1175/JCLI-D-16-0903.1},
volume = {30},
year = {2017}
}
