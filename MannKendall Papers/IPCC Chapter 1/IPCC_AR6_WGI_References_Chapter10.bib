isbn = {0038201527347},
issn = {0930-7575},
journal = {Climate Dynamics},
keywords = {CMIP5,Eastern Africas,Rainfall,Teleconnections,cmip5,cordex,eastern africa,rainfall,rcm,teleconnections},
month = {may},
number = {9-10},
pages = {2821--2846},
publisher = {Springer Berlin Heidelberg},
title = {{Teleconnection responses in multi-GCM driven CORDEX RCMs over Eastern Africa}},
url = {http://link.springer.com/10.1007/s00382-015-2734-7},
volume = {46},
