month = {sep},
number = {3-4},
pages = {198--209},
publisher = {Elsevier B.V.},
title = {{Scenario-neutral approach to climate change impact studies: Application to flood risk}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2010.06.043 https://linkinghub.elsevier.com/retrieve/pii/S0022169410004117},
