@article{Wang2015d,
abstract = {A large body of work has shown that year-to-year variations in North African dust emission are inversely proportional to previous-year monsoon rainfall in the Sahel, implying that African dust emission is highly sensitive to vegetation changes in this narrow transitional zone. However, such a theory is not supported by field observations or modeling studies, as both suggest that interannual variability in dust is due to changes in wind speeds over the major emitting regions, which lie to the north of the Sahelian vegetated zone. We reconcile this contradiction showing that interannual variability in Sahelian rainfall and surface wind speeds over the Sahara are the result of changes in lower tropospheric air temperatures over the Saharan heat low (SHL). As the SHL warms, an anomalous tropospheric circulation develops that reduces wind speeds over the Sahara and displaces the monsoonal rainfall northward, thus simultaneously increasing Sahelian rainfall and reducing dust emission from the major dust “hotspots” in the Sahara. Our results shed light on why climate models are, to date, unable to reproduce observed historical variability in dust emission and transport from this region.},
author = {Wang, Weijie and Evan, Amato T and Flamant, Cyrille and Lavaysse, Christophe},
doi = {10.1126/sciadv.1500646},
journal = {Science Advances},
month = {oct},
number = {9},
pages = {e1500646},
title = {{On the decadal scale correlation between African dust and Sahel rainfall: The role of Saharan heat low–forced winds}},
url = {http://advances.sciencemag.org/content/1/9/e1500646.abstract},
volume = {1},
year = {2015}
}
@article{doi:10.1029/2018GL077325,
abstract = {Abstract The role of ocean dynamics in the transient adjustment of the coupled climate system to an abrupt loss of Arctic sea ice is investigated using experiments with Community Climate System Model version 4 in two configurations: a thermodynamic slab mixed layer ocean and a full-depth ocean that includes both dynamics and thermodynamics. Ocean dynamics produce a distinct sea surface temperature warming maximum in the eastern equatorial Pacific, accompanied by an equatorward intensification of the Intertropical Convergence Zone and Hadley Circulation. These tropical responses are established within 25 years of ice loss and contrast markedly with the quasi-steady antisymmetric coupled response in the slab-ocean configuration. A heat budget analysis reveals the importance of anomalous vertical advection tied to a monotonic temperature increase below 200 m for the equatorial sea surface temperature warming maximum in the fully coupled model. Ocean dynamics also rapidly modify the midlatitude atmospheric response to sea ice loss.},
author = {Wang, Kun and Deser, Clara and Sun, Lantao and Tomas, Robert A.},
doi = {10.1029/2018GL077325},
issn = {00948276},
journal = {Geophysical Research Letters},
keywords = {Arctic sea ice,climate change,ocean dynamics,tropical-polar connection},
month = {may},
number = {9},
pages = {4264--4272},
title = {{Fast Response of the Tropics to an Abrupt Loss of Arctic Sea Ice via Ocean Dynamics}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2018GL077325 http://doi.wiley.com/10.1029/2018GL077325},
volume = {45},
year = {2018}
