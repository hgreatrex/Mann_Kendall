pages = {1109--1123},
title = {{A Statistical–Dynamical Methodology to Downscale Regional Climate Projections to Urban Scale}},
url = {https://journals.ametsoc.org/view/journals/apme/59/6/JAMC-D-19-0104.1.xml https://doi.org/10.1175/JAMC-D-19-0104.1},
