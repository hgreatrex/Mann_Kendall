keywords = {Climate change,Climate projection,The Red Sea,Waves,Winds},
month = {may},
pages = {103151},
publisher = {Elsevier B.V.},
title = {{Can we extrapolate climate in an inner basin? The case of the Red Sea}},
volume = {188},
year = {2020}
}
