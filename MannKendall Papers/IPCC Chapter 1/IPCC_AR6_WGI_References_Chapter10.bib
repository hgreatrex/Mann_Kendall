journal = {Water Resources Research},
keywords = {India,WEAP,adaptation pathways,climate change,narratives,socioeconomic change},
month = {feb},
number = {2},
pages = {708--728},
title = {{Water Resource Planning Under Future Climate and Socioeconomic Uncertainty in the Cauvery River Basin in Karnataka, India}},
url = {http://doi.wiley.com/10.1002/2017WR020970},
volume = {54},
year = {2018}
}
@article{Bian_2020,
