pages = {196--211},
title = {{Impacts of parameterized orographic drag on the Northern Hemisphere winter circulation}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2015MS000564},
volume = {8},
year = {2016}
}
