journal = {Journal of Geophysical Research: Atmospheres},
keywords = {Central Asia,Tianshan Mountains,WRF,added value,dynamical downscaling},
month = {nov},
number = {21},
pages = {11051--11069},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Added Value of a Dynamical Downscaling Approach for Simulating Precipitation and Temperature Over Tianshan Mountains Area, Central Asia}},
url = {https://doi.org/10.1029/2019JD031016 https://onlinelibrary.wiley.com/doi/abs/10.1029/2019JD031016},
volume = {124},
