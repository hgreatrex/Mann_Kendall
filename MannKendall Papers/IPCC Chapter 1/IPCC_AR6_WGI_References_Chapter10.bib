pages = {8960--8965},
title = {{Impacts of a recent storm surge on an Arctic delta ecosystem examined in the context of the last millennium}},
url = {http://www.pnas.org/cgi/doi/10.1073/pnas.1018527108},
volume = {108},
year = {2011}
}
