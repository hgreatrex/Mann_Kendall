isbn = {0002401818536},
issn = {0033-4553},
journal = {Pure and Applied Geophysics},
keywords = {EURO-adaptation,arid climate,biodiversity,climate change,climate model,mediterranean climate,regional},
month = {nov},
number = {11},
pages = {3955--3971},
title = {{Assessing Shifts of Mediterranean and Arid Climates Under RCP4.5 and RCP8.5 Climate Projections in Europe}},
url = {http://link.springer.com/10.1007/s00024-018-1853-6},
volume = {175},
