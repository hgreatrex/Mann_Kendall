title = {{Interhemispheric Aerosol Radiative Forcing and Tropical Precipitation Shifts during the Late Twentieth Century}},
url = {https://journals.ametsoc.org/jcli/article/28/20/8219/35222/Interhemispheric-Aerosol-Radiative-Forcing-and},
volume = {28},
year = {2015}
}
