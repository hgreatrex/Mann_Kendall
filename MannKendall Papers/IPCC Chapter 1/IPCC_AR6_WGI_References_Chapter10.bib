issn = {08998418},
journal = {International Journal of Climatology},
keywords = {climate change,homogenization,radiosonde,temperature trends,upper-air temperature},
month = {jun},
number = {7},
pages = {3209--3222},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Homogenized monthly upper-air temperature data set for Australia}},
url = {https://doi.org/10.1002/joc.4909 http://doi.wiley.com/10.1002/joc.4909},
volume = {37},
