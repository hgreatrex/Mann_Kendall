journal = {Regional Environmental Change},
keywords = {Climate variability,Hydrological regime,Mann–Kendall,Pearson correlation,Snow cover area},
number = {3},
pages = {813--825},
publisher = {Springer Berlin Heidelberg},
title = {{Impacts of changing climate and snow cover on the flow regime of Jhelum River, Western Himalayas}},
volume = {17},
year = {2017}
}
