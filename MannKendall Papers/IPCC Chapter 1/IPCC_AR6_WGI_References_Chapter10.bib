month = {apr},
pages = {35},
title = {{Physical Responses of Convective Heavy Rainfall to Future Warming Condition: Case Study of the Hiroshima Event}},
url = {www.frontiersin.org http://journal.frontiersin.org/article/10.3389/feart.2018.00035/full},
