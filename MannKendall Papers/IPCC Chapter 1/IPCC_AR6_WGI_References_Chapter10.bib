issn = {0941-2948},
journal = {Meteorologische Zeitschrift},
keywords = {Alpine region,Daily precipitation,Downscaling,Evaluation,Grid dataset,Mesoscale,Regional reanalyses},
month = {mar},
number = {1},
pages = {15--37},
title = {{Evaluation of European regional reanalyses and downscalings for precipitation in the Alpine region}},
