pages = {024005},
title = {{Irrigation enhances local warming with greater nocturnal warming effects than daytime cooling effects}},
url = {http://stacks.iop.org/1748-9326/13/i=2/a=024005?key=crossref.4a93ef61f758279985613f5e49fa2cd5},
