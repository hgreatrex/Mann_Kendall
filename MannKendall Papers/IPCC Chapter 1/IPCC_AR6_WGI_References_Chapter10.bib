pages = {909--933},
title = {{A Novel Method for Interpolating Daily Station Rainfall Data Using a Stochastic Lattice Model}},
url = {https://journals.ametsoc.org/jhm/article/21/5/909/345335/A-Novel-Method-for-Interpolating-Daily-Station},
volume = {21},
year = {2020}
}
