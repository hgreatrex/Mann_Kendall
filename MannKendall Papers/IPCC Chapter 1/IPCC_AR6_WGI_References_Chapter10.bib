volume = {39},
year = {2012}
}
@article{Gula2012,
abstract = {The Weather Research and Forecasting model (WRF) is employed to dynamically$\backslash$ndownscale global warming projections produced using the Community$\backslash$nClimate System Model (CCSM). The analyses are focused on the Great$\backslash$nLakes Basin of North America and the climate change projections extend$\backslash$nfrom the instrumental period (1979-2001) to midcentury (2050-60)$\backslash$nat a spatial resolution of 10 km. Because WRF does not currently$\backslash$ninclude a sufficiently realistic lake component, simulations are$\backslash$nperformed using lake water temperature provided by D.V. Mironov's$\backslash$nfreshwater lake model ``FLake{\{}''{\}} forced by atmospheric fields from$\backslash$nthe global simulations. Results for the instrumental era are first$\backslash$ncompared with observations to evaluate the ability of the lake model$\backslash$nto provide accurate lake water temperature and ice cover and to analyze$\backslash$nthe skill of the regional model. It is demonstrated that the regional$\backslash$nmodel, with its finer resolution and more comprehensive physics,$\backslash$nprovides significantly improved results compared to those obtained$\backslash$nfrom the global model. It much more accurately captures the details$\backslash$nof the annual cycle and spatial pattern of precipitation. In particular,$\backslash$nmuch more realistic lake-induced precipitation and snowfall patterns$\backslash$ndownwind of the lakes are predicted. The midcentury projection is$\backslash$nanalyzed to determine the impact of downscaling on regional climate$\backslash$nchanges. The emphasis in this final phase of the analysis is on the$\backslash$nimpact of climate change on winter snowfall in the lee or the lakes.$\backslash$nIt is found that future changes in lake surface temperature and ice$\backslash$ncover under warmer conditions may locally increase snowfall as a$\backslash$nresult of increased evaporation and the enhanced lake effect.