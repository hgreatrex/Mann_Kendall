journal = {Climate Dynamics},
keywords = {Added value,Evaluation,Indian monsoon,Regional models},
month = {feb},
number = {3-4},
pages = {1375--1397},
publisher = {Springer Berlin Heidelberg},
title = {{Do dynamic regional models add value to the global model projections of Indian monsoon?}},
url = {http://link.springer.com/10.1007/s00382-016-3147-y},
volume = {48},
year = {2017}
}
