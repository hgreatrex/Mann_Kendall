journal = {Climate Dynamics},
keywords = {Added value,Precipitation,Regional climate model,Temporal-spatial scale analysis,regional climate model {\'{a}},scale analysis {\'{a}} precipitation,temporal-spatial,{\'{a}} added value},
month = {apr},
number = {5-6},
pages = {1229--1247},
title = {{Potential for added value in precipitation simulated by high-resolution nested Regional Climate Models and observations}},
