journal = {Journal of Applied Meteorology and Climatology},
language = {English},
month = {may},
number = {5},
pages = {859--883},
publisher = {American Meteorological Society},
title = {{A Statistical–Dynamical Downscaling for the Urban Heat Island and Building Energy Consumption – Analysis of Its Uncertainties}},
url = {https://journals.ametsoc.org/view/journals/apme/59/5/jamc-d-19-0182.1.xml},
