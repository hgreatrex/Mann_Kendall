journal = {Global Change Biology},
keywords = {CESM,CLM,climate-effective land management,land-based mitigation,subgrid-scale influences,temperature extremes,tillage},
month = {oct},
number = {10},
pages = {4758--4774},
title = {{Modelled biophysical impacts of conservation agriculture on local climates}},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/gcb.14362 http://doi.wiley.com/10.1111/gcb.14362 https://onlinelibrary.wiley.com/doi/10.1111/gcb.14362},
