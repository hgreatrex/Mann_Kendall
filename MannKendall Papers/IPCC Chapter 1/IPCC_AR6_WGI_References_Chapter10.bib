issn = {0894-8755},
journal = {Journal of Climate},
month = {mar},
number = {5},
pages = {1082--1103},
title = {{The Summer North Atlantic Oscillation: Past, Present, and Future}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/2008JCLI2459.1},
volume = {22},
