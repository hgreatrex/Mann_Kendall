publisher = {Springer New York LLC},
title = {{Projected changes in flood indices in selected catchments in Poland in the 21st century}},
url = {https://link.springer.com/article/10.1007/s00477-016-1296-5},
volume = {31},
year = {2017}
}
@article{Otkin2018,
