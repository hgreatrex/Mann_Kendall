title = {{Heat Stress and Dairy Cow: Impact on Both Milk Yield and Composition}},
url = {http://www.scialert.net/abstract/?doi=ijds.2017.1.11 https://www.scialert.net/abstract/?doi=ijds.2017.1.11},
volume = {12},
