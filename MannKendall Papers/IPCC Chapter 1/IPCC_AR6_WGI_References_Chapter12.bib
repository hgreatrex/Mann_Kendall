pages = {6223--6244},
title = {{Changes in Winter Warming Events in the Nordic Arctic Region}},
url = {https://journals.ametsoc.org/jcli/article/29/17/6223/107106/Changes-in-Winter-Warming-Events-in-the-Nordic},
