month = {feb},
number = {2},
pages = {264--285},
title = {{Climate Impacts in Europe Under +1.5°C Global Warming}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2017EF000710 http://doi.wiley.com/10.1002/2017EF000710},
